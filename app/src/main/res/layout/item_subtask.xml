<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/checkbox_subtask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Subtask title" />

    <ImageButton
        android:id="@+id/button_edit_subtask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete"
        android:layout_marginRight="30dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Edit subtask" />

    <ImageButton
        android:id="@+id/button_delete_subtask"
        android:src="@drawable/ic_delete"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Delete Subtask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
