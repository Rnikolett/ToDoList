<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/taskListFragment">

    <fragment
        android:id="@+id/taskListFragment"
        android:name="com.example.todolist.ui.main.TaskListFragment"
        android:label="Tasks"
        tools:layout="@layout/fragment_task_list" >

        <action
            android:id="@+id/action_taskList_to_addEditTask"
            app:destination="@id/addEditTaskFragment" />
    </fragment>

    <fragment
        android:id="@+id/addEditTaskFragment"
        android:name="com.example.todolist.ui.main.AddEditTaskFragment"
        android:label="Add/Edit Task"
        tools:layout="@layout/fragment_add_edit_task" >
        <argument
            android:name="taskId"
            app:argType="integer"
            android:defaultValue="-1" />
        <argument
            android:name="taskTitle"
            app:argType="string"
            android:defaultValue="" />
        <argument
            android:name="taskDescription"
            app:argType="string"
            android:defaultValue="" />
        <action
            android:id="@+id/action_addEditTask_to_taskList"
            app:destination="@id/taskListFragment" />
    </fragment>

</navigation>